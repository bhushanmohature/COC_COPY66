<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".FunnyLayout2">

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/toolwar_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:orientation="horizontal"
        app:titleTextColor="@color/white">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Funny Layout"
            android:textSize="22dp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:fontFamily="@font/letin_bold"
            android:textColor="@color/white"
            android:layout_marginLeft="20dp"/>

    </LinearLayout>

    <ScrollView
        android:id="@+id/myScrollView"

        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/Cardf1"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:divider="@drawable/open_btn"
                android:layout_marginRight="20dp"
                android:background="@drawable/card_second"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/f1"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:paddingRight="10dp"
                    android:src="@drawable/f_1" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="21dp"
                    android:layout_height="22dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="41dp"
                    android:text="1"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/OpenButtonView"
                    android:layout_width="125dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="240dp"
                    android:src="@drawable/open_btn" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/Cardf2"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/card_second"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/f2"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:paddingRight="10dp"
                    android:src="@drawable/f_2" />

                <ImageView
                    android:id="@+id/OpenButtonView"
                    android:layout_width="125dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="240dp"
                    android:src="@drawable/open_btn"
                    tools:ignore="DuplicateIds" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/Cardf3"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/card_second"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/f3"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:paddingRight="10dp"
                    android:src="@drawable/f_3" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="125dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="240dp"
                    android:src="@drawable/open_btn" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/Cardf4"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/card_second"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/f4"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:paddingRight="10dp"
                    android:src="@drawable/f_4" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="125dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="240dp"
                    android:src="@drawable/open_btn"
                    tools:ignore="DuplicateIds" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/Cardf5"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/card_second"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/f5"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:paddingRight="10dp"
                    android:src="@drawable/f_5" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="125dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="240dp"
                    android:src="@drawable/open_btn"
                    tools:ignore="DuplicateIds" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/Cardf6"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/card_second"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/f6"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:paddingRight="10dp"
                    android:src="@drawable/f_6" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="125dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="240dp"
                    android:src="@drawable/open_btn"
                    tools:ignore="DuplicateIds" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>